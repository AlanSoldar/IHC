<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E3E3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atividade 1" />

        <Button
            android:id="@+id/buttonA2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atividade 2" />

        <Button
            android:id="@+id/buttonA3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atividade 3" />

        <Button
            android:id="@+id/buttonA4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atividade 4" />

        <Button
            android:id="@+id/buttonA5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atividade 5" />

        <Button
            android:id="@+id/buttonA6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atividade 6" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>